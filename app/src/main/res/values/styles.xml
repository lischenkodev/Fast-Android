<resources>

    <style name="AppTheme" />

    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">?colorAccent</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="alertDialogTheme">@style/AlertDialog.Theme.Light</item>
        <item name="preferenceTheme">@style/AppTheme.PreferenceThemeOverlay</item>
        <item name="itemsColor">#EBEDF0</item>
        <item name="itemsShadowColor">#CCCECECE</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorAccent">@color/dark_accent</item>
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorSecondary">?colorAccent</item>
        <item name="colorPrimaryDark">@color/dark_primary_dark</item>
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="alertDialogTheme">@style/AlertDialog.Theme.Dark</item>
        <item name="preferenceTheme">@style/AppTheme.PreferenceThemeOverlay</item>
        <item name="itemsColor">#0A0A0A</item>
        <item name="itemsShadowColor">#CC000000</item>
    </style>

    <style name="AppTheme.Login.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorAccent">@color/dark_accent</item>
        <item name="colorPrimary">@color/dark_accent</item>
        <item name="colorSecondary">?colorAccent</item>
        <item name="colorPrimaryDark">@color/dark_background</item>
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="alertDialogTheme">@style/AlertDialog.Theme.Dark</item>
    </style>

    <style name="AppTheme.Login.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/accent</item>
        <item name="colorSecondary">?colorAccent</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="alertDialogTheme">@style/AlertDialog.Theme.Light</item>
    </style>

    <style name="AppTheme.PhotoView" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="alertDialogTheme">@style/AlertDialog.Theme.Dark</item>
    </style>

    <style name="AlertDialog.Theme.Light" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
        <item name="dialogCornerRadius">@dimen/default_corners_radius</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialog.Button.Light</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialog.Button.Light</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialog.Button.Light</item>
    </style>

    <style name="AlertDialog.Theme.Dark" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorAccent">@color/dark_accent</item>
        <item name="dialogCornerRadius">@dimen/default_corners_radius</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialog.Button.Dark</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialog.Button.Dark</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialog.Button.Dark</item>
    </style>

    <style name="AlertDialog.Button.Light" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/accent</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AlertDialog.Button.Dark" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/dark_accent</item>
        <item name="android:textColor">@color/dark_accent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.PreferenceThemeOverlay" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:layout">@layout/fragment_settings</item>
    </style>

</resources>
