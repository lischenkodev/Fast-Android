<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/abc_tb_root"
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/abc_tb_back"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:tint="?android:textColorPrimary"
            android:visibility="gone"
            tools:visibility="visible" />

        <ru.melodin.fast.view.CircleImageView
            android:id="@+id/abc_user_avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            tools:src="@drawable/avatar_placeholder"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="112dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/abc_tb_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ps_regular"
                android:singleLine="true"
                android:textColor="?android:textColorPrimary"
                android:textSize="18sp"
                tools:gravity="center"
                tools:text="Title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/abc_tb_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/ps_regular"
                android:singleLine="true"
                android:textColor="?android:textColorSecondary"
                tools:gravity="center"
                tools:text="Subtitle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/abc_tb_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="center"
            android:orientation="horizontal"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="?selectableItemBackgroundBorderless"
                android:minWidth="24dp"
                android:minHeight="24dp"
                android:padding="2dp"
                android:src="@android:color/transparent"
                android:tint="?android:textColorPrimary"
                android:visibility="visible"
                tools:src="@drawable/ic_search_black_24dp"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="?selectableItemBackgroundBorderless"
                android:padding="2dp"
                android:tint="?android:textColorPrimary"
                android:visibility="visible"
                tools:src="@drawable/md_add"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>