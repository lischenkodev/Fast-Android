<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <LinearLayout
        android:id="@+id/abc_tb_navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/abc_tb_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="14dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:tint="?android:textColorPrimary"
            android:visibility="gone"
            tools:visibility="visible" />

        <Space
            android:id="@+id/abc_tb_avatar_space"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <ru.melodin.fast.view.CircleImageView
            android:id="@+id/abc_user_avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:visibility="gone"
            tools:src="@drawable/avatar_placeholder"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/abc_tb_navigation"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:orientation="vertical"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/abc_tb_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ps_regular"
                android:singleLine="true"
                android:textColor="?android:textColorPrimary"
                android:textSize="18sp"
                tools:gravity="center"
                tools:text="Title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/abc_tb_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ps_regular"
                android:singleLine="true"
                android:textColor="?android:textColorSecondary"
                tools:gravity="center"
                tools:text="Subtitle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/abc_tb_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="horizontal"
            tools:visibility="visible">

            <androidx.appcompat.widget.ActionMenuView
                android:id="@+id/menuView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>