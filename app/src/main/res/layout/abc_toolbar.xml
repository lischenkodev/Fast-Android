<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/abc_tb_root"
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/abc_tb_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="2dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:tint="?android:textColorPrimary"
            android:visibility="gone"
            tools:visibility="visible" />

        <ru.melodin.fast.view.CircleImageView
            android:id="@+id/user_avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            tools:src="@drawable/avatar_placeholder"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="112dp"
        android:layout_marginEnd="112dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/abc_tb_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ps_regular"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="?android:textColorPrimary"
            android:textSize="20sp"
            tools:text="Title" />

        <TextView
            android:id="@+id/abc_tb_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/ps_regular"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="?android:textColorSecondary"
            tools:text="Subtitle" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/abc_tb_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="2dp"
            android:tint="?android:textColorPrimary"
            android:visibility="gone"
            tools:src="@drawable/ic_search_black_24dp"
            tools:visibility="visible" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="2dp"
            android:tint="?android:textColorPrimary"
            android:visibility="gone"
            tools:src="@drawable/md_add"
            tools:visibility="visible" />

    </LinearLayout>

</FrameLayout>