<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="56dp"
	android:layout_gravity="bottom"
	android:id="@+id/toolbar"
	android:clickable="true"
	android:focusable="true"
	android:background="?android:windowBackground"
	android:gravity="center"
	android:orientation="vertical">

	<View
		android:background="?android:attr/dividerVertical"
		android:layout_width="match_parent"
		android:layout_height="1dp"/>

	<RelativeLayout
		android:orientation="horizontal"
		android:layout_height="55dp"
		android:layout_width="match_parent">

		<ImageButton
			android:layout_width="45dp"
			android:background="?selectableItemBackgroundBorderless"
			android:layout_height="45dp"
			android:tint="?colorAccent"
			android:src="@drawable/md_filter"
			android:id="@+id/tb_filter"
			android:layout_centerVertical="true"
			android:layout_marginRight="55dp"
			android:layout_marginLeft="20dp"/>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:id="@+id/tb_icons_switcher"
			android:weightSum="1.0"
			android:gravity="center"
			android:layout_centerInParent="true">

			<ImageButton
				android:layout_width="50dp"
				android:layout_height="40dp"
				android:tint="@android:color/white"
				android:src="@drawable/md_mail"
				android:id="@+id/tb_messages"/>

			<ImageButton
				android:layout_width="50dp"
				android:layout_height="40dp"
				android:src="@drawable/md_people"
				android:tint="?colorAccent"
				android:id="@+id/tb_friends"
				android:layout_marginStart="0dp"/>

		</LinearLayout>

		<ImageButton
			android:layout_width="45dp"
			android:background="?selectableItemBackgroundBorderless"
			android:layout_height="45dp"
			android:src="@drawable/md_burger"
			android:tint="?colorAccent"
			android:layout_alignParentEnd="true"
			android:id="@+id/tb_menu"
			android:layout_centerVertical="true"
			android:layout_marginLeft="55dp"
			android:layout_marginRight="20dp"/>

	</RelativeLayout>

</LinearLayout>

