<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground">

    <include
        layout="@layout/recycler_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp" />

    <FrameLayout
        android:id="@+id/pinnedContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?colorPrimary"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="4dp"
                    android:paddingEnd="10dp">

                    <TextView
                        android:id="@+id/pinnedName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:fontFamily="@font/ps_medium"
                        android:singleLine="true"
                        android:textColor="?android:textColorPrimary"
                        tools:text="Danil Nikolaev" />

                    <TextView
                        android:id="@+id/pinnedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="?android:textColorSecondary"
                        android:textSize="12sp"
                        tools:text="12:30" />

                </LinearLayout>

                <TextView
                    android:id="@+id/pinnedText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:autoLink="all"
                    android:linksClickable="false"
                    android:singleLine="true"
                    android:textColor="?android:textColorPrimary"
                    tools:text="Pinned Message" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/unpin"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="0"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/md_clear"
                android:tint="?android:textColorPrimary" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/abc_toolbar_shadow" />
    </FrameLayout>

    <include layout="@layout/toolbar" />

    <include layout="@layout/toolbar_action" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/scrollToBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="76dp"
        android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
        android:visibility="gone"
        app:backgroundTint="?colorPrimary"
        app:fabSize="mini"
        app:tint="?android:textColorPrimary"
        tools:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="60dp"
        android:alpha="0.6"
        android:background="@drawable/message_drop_shadow_dark" />

    <LinearLayout
        android:id="@+id/chatPanel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="?colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/picker"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_weight="0"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/md_attachment"
            app:backgroundTint="@android:color/transparent"
            app:tint="?android:textColorSecondary" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:hint="@string/tap_to_type"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="6"
            android:padding="10dp"
            android:textColorHint="?android:textColorSecondary" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/smiles"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="6dp"
            android:layout_weight="0"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/md_online_status"
            app:backgroundTint="@android:color/transparent"
            app:tint="?android:textColorSecondary" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="0"
            android:elevation="0dp"
            android:src="@drawable/md_mic"
            app:backgroundTint="?colorAccent"
            app:elevation="0dp"
            app:fabCustomSize="40dp"
            app:fabSize="mini"
            app:tint="?colorPrimary" />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>