<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?actionBarSize" />

        <LinearLayout
            android:id="@+id/no_items_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp">

            <include layout="@layout/no_items" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <LinearLayout
            android:id="@+id/pinned_msg_container"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginTop="?actionBarSize">

            <include
                layout="@layout/pinned_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chat_panel"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="-2dp"
            android:background="@drawable/chat_panel_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/message_edit_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:hint="@string/tap_to_type"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="6"
                android:padding="10dp"
                android:textColorHint="#C4C4C4" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/smiles"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="10dp"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/md_online_status"
                app:backgroundTint="@android:color/transparent"
                app:tint="#cccccc" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/send"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/md_mic"
                app:backgroundTint="?colorAccent"
                app:tint="#ffffff" />

        </LinearLayout>
    </FrameLayout>

</LinearLayout>

