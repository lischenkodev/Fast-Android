<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone" />

    <ru.melodin.fast.view.Toolbar
        android:id="@+id/tb"
        android:layout_width="match_parent"
        android:layout_height="56dp" />

    <FrameLayout
        android:id="@+id/pinned_msg_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?colorPrimary"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="4dp"
                    android:paddingEnd="10dp">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ps_medium"
                        android:gravity="center_vertical"
                        android:paddingStart="6dp"
                        android:paddingEnd="0dp"
                        android:singleLine="true"
                        android:textColor="?android:textColorPrimary"
                        tools:text="Danil Nikolaev" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="?android:textColorSecondary"
                        android:textSize="12sp"
                        tools:text="12:30" />

                </LinearLayout>

                <TextView
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:autoLink="all"
                    android:linksClickable="false"
                    android:singleLine="true"
                    android:textColor="?android:textColorPrimary"
                    tools:text="Pinned Message" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/unpin"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="0"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/md_clear"
                android:tint="?android:textColorPrimary" />
        </LinearLayout>
    </FrameLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/scroll_to_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="76dp"
        android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
        android:visibility="gone"
        app:backgroundTint="?android:windowBackground"
        app:fabSize="mini"
        app:layout_behavior="com.google.android.material.floatingactionbutton.FloatingActionButton$Behavior"
        app:tint="?android:textColorPrimary" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="60dp"
        android:background="@drawable/message_drop_shadow_dark" />

    <LinearLayout
        android:id="@+id/chat_panel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="?android:windowBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/message_edit_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:hint="@string/tap_to_type"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="6"
            android:padding="10dp"
            android:textColorHint="#C4C4C4" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/smiles"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/md_online_status"
            app:backgroundTint="@android:color/transparent"
            app:tint="#cccccc" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/send"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/md_mic"
            app:backgroundTint="?colorAccent"
            app:tint="#ffffff" />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>